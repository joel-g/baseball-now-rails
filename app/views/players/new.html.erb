<h2>Add Player Data</h2>

<div class='errors'>
 <% if @player.errors.any? %>
   <% @player.errors.full_messages.each do |error| %>
    <div><%= error %></div>
   <% end %>
 <% end %>
</div>

<%= form_for @player do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :location %>
<%= f.text_field :location %><br>
<%= f.label :pitches_faced %>
<%= f.number_field :pitches_faced %><br>
<%= f.label :hits %>
<%= f.number_field :hits %><br>
<%= f.label :innings %>
<%= f.number_field :innings %><br>
<%= f.label :date %>
<%= f.date_field :date %>
<%= f.submit 'Submit' %>
<% end %>
